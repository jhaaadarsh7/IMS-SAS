{
  "name": "ims-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n web,api,worker -c blue,green,magenta \"npm run dev -w @ims/web\" \"npm run dev -w @ims/api\" \"npm run dev -w @ims/worker\"",
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prisma:generate": "npm run prisma:generate -w @ims/db",
    "prisma:migrate": "npm run prisma:migrate -w @ims/db"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^9.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}
